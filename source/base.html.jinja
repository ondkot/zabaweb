        {% endfor %}
            <li><a href="lidske-telo-v-obraze/">Lidské tělo v obraze</a></li>
        </ul>
        {{ article }}
        {% if not isindex %}<a href="/">Zpět</a>{% endif %}
    </body>
</html>
